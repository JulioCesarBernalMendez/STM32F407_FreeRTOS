TIM_HandleTypeDef htim3;

UART_HandleTypeDef huart2;

/* USER CODE BEGIN PV */
/* semaphore handle used to synch the TIM3 interrupt with a task */
SemaphoreHandle_t xBinarySemaphore;
/* USER CODE END PV */

